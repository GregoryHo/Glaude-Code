{
  "includeCoAuthoredBy": false,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Read",
      "Write", 
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "LS",
      "Bash",
      "WebFetch",
      "WebSearch",
      "TodoWrite"
    ],
    "deny": [
      "Bash(sudo rm -rf /*)",
      "Bash(:(){ :|:& };:)",
      "Bash(dd if=/dev/*)"
    ],
    "ask": [
      "KillBash",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)"
    ]
  }
}